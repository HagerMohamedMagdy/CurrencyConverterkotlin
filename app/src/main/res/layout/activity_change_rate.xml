<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.ChangeRateActivity">
    <LinearLayout
            android:padding="10dip"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:id="@+id/base_linear"
            android:background="@drawable/button_background"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="70dp">
        <EditText
                android:id="@+id/base_et"

                android:textColor="@color/black"

                android:textColorHint="@color/black"
                android:layout_width="wrap_content"
                android:text="1.0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAlignment="center"
                android:focusable="true"
                tools:ignore="RtlCompat"
                android:imeOptions="actionDone"
                style="@style/MyTextView"
                android:layout_gravity="center_vertical"
              ><requestFocus/>
        </EditText>>
        <TextView
                android:text="USD"

                android:textColor="@color/black"

                android:textAlignment="center"
                tools:ignore="RtlCompat"
                style="@style/MyTextView"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/base_name" />
    </LinearLayout>
    <LinearLayout
            android:padding="10dip"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/base_linear"
            android:orientation="horizontal"
            android:id="@+id/selcet_linear"
            android:background="@drawable/button_background"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="70dp">
    <TextView
            android:id="@+id/selected_et"
            tools:text="selected "
            android:layout_width="wrap_content"

            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black"

            android:layout_height="wrap_content"
            tools:ignore="RtlCompat"
            style="@style/MyTextView"
            android:enabled="false"
           />

        <TextView
                tools:text="TextView"

                android:textAlignment="center"
                style="@style/MyTextView"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select_name"
                tools:ignore="RtlCompat" />
    </LinearLayout>

    <Button
            android:text="@string/convet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/convert_btn"
            android:layout_marginTop="191dp"
            android:layout_below="@+id/selcet_linear"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_alignParentEnd="true"
           android:background="@drawable/button_background"
            android:layout_alignParentStart="true"

             />

</RelativeLayout>